@model Entities.Services

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container">
        <div class="row">
            <h2>Faaliyet Alanı Detay</h2>
            <hr />
        </div>

        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.Raw(Model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ServicesImage)
                </dt>

                <dd>
                    <img src="~/images/services/@Model.ServicesImage" class="img-responsive rounded-circle" width="64" height="64" />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModifiedOn)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModifiedUsername)
                </dd>

            </dl>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
                <a href="/Services/Edit/@Model.Id" class="btn btn-success"> <span class="glyphicon glyphicon-send"></span>Güncelle</a>
                <a href="/Services/Index" class="btn btn-default"><span class="glyphicon glyphicon-circle-arrow-left"></span>İptal</a>
            </div>
        </div>
    </div>
