@model Entities.ValueObjects.RegisterViewModel

@{
    ViewBag.Title = "Kullanıcı Kayıt";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/validation-summary.css" rel="stylesheet" />
