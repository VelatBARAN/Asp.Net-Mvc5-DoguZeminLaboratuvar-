@model Entities.ValueObjects.LoginViewModel

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <link href="~/Content/validation-summary.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- main content start-->
    <div id="page-wrapper">
        <div class="main-page login-page ">
            <h3 class="title1">Giriş Sayfası</h3>
            <div class="widget-shadow">
                <div class="login-top">
                    <h4> Doğu Zemin Laboratuvar - Yönetim Paneline Hoşgeldiniz !</h4>
                    @Html.ValidationSummary(false) <!-- True olursa propertilerden (örnek : ViewModel lerden) gelen hata mesajlarını göstermez-->
                </div>
                <div class="login-body">
                    <form>
                        <input type="text" class="user" name="Username" placeholder="kullanıcı adınız..">
                        <input type="password" name="Password" class="lock" placeholder="şifreniz..">
                        <input type="submit" name="Giris" value="Giriş">
                        <div class="forgot-grid">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i></i>Hatırla Beni!</label>
                            <div class="forgot">
                                <a href="/Admin/ForgetPass">Şifremi Unuttum</a>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


