@model IEnumerable<Entities.Users>

@{
    ViewBag.Title = "Adminler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">

            <div class="row">
                <div class="col-md-12">
                    <h3>Kullanıcılar</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a href="/Admin/RegisterUser" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span>Yeni Kullanıcı</a>
                    <table class="table table-responsive table-striped table-bordered table-hover panel-body widget-shadow" style="margin-top:10px">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Degree)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Task)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Twitter)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Instagram)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Facebook)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Linkedin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProfilImage)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Degree)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Task)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Twitter)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instagram)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Facebook)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Linkedin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAdmin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            <img src="~/images/user/@item.ProfilImage" class="img-responsive rounded-circle" width="64" height="64" />
                        </td>
                        <td>
                            <div class="col-md-2 text-right">
                                <div class="btn-group">
                                    <a class="btn dropdown-toggle btn-success" data-toggle="dropdown" href="#">
                                        <span class="glyphicon glyphicon-cog">&nbsp;</span>
                                        Seçenekler
                                        <span class="icon-cog icon-white"></span><span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="/Admin/UserEdit/@item.Id" title="Düzenle">
                                                <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenle
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/Admin/UserDelete/@item.Id" title="Sil" onclick="return confirm('Hesabınızi silmek istediğinize emin misiniz?')">
                                                <span class="glyphicon glyphicon-remove">&nbsp;</span>Sil
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                        }

                    </table>
                </div>
            </div>

        </div>
        <div class="clearfix"> </div>
    </div>
</div>