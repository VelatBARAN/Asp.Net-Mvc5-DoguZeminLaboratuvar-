@model Entities.About

<!-- ======= About Us Section ======= -->
<section id="about" class="about">
    <div class="container">

        <div class="row">
            <div class="col-lg-9" data-aos="fade-left">
                <div>
                    <img src="~/images/about/@Model.AboutImage" class="img-fluid img-responsive" width="500" height="500" />
                </div>
                <div class="content pt-4 pt-lg-0 pl-0 pl-lg-3 " style="margin-top:25px">
                    <h3 style="margin-bottom:5px"><a href="">@Model.Title</a></h3>
                    <p class="text-justify" style="font-size:18px;font-style:italic">
                    @Html.Raw(Model.Text)</p>
                </div>
            </div>
            
            @Html.Partial("_PartialAboutTitle")

        </div>
    </div>
</section><!-- End About Us Section -->
