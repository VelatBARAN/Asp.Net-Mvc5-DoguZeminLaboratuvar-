@using Entities
@using BusinessLayer
@using DoguZemin.Helper

@{
    AboutManager aboutManager = new AboutManager();
    List<About> listAbout = aboutManager.List();
}

<div class="col-lg-3" data-aos="fade-right">
    <a class="list-group-item active">Hakkımızda</a>
    @foreach (About item in listAbout)
    {
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/Hakkimizda/@SeoHelper.ToSeoUrl(item.Title).ToLower()/@item.Id"><span class="badge badge-primary badge-primary mr-3">*</span>@item.Title</a>
            </li>
        </ul>
    }
</div>


