@model Entities.ProjectsDone

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<div class="container">
    <div class="row">
        <h2>Proje Çalışması Güncelleme</h2>
        <hr />
    </div>

    <div class="row">
        @using (Html.BeginForm("Edit", "ProjectsDone", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="form-horizontal">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.SlideImage1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <img src="~/images/projectsdone/@Model.SlideImage1" class="img-circle img-responsive" width="128" height="128" />
                    <br /><br />
                    <input type="file" name="SlideImage1" id="SlideImage1" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                    <br /><br />
                    @Html.LabelFor(model => model.SlideImage2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <img src="~/images/projectsdone/@Model.SlideImage2" class="img-circle img-responsive" width="128" height="128" />
                    <br /><br />
                    <input type="file" name="SlideImage2" id="SlideImage2" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                    <br /><br />
                    @Html.LabelFor(model => model.SlideImage3, htmlAttributes: new { @class = "control-label col-md-2" })
                    <img src="~/images/projectsdone/@Model.SlideImage3" class="img-circle img-responsive" width="128" height="128" />
                    <br /><br />
                    <input type="file" name="SlideImage3" id="SlideImage3" class="form-control" accept=".png,.jpg,.jpeg" /><br />
                    <span class="glyphico glyphicon-info-sign">&nbsp;</span>
                    <span><i>Lütfen .png,.jpeg ya da .jpg formatı kullanın</i></span>
                </div>

                <div class="col-md-9">

                    @Html.ValidationSummary(false)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea name="Text" class="ckeditor form-control" required>@Html.Raw(Model.Text)</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GiveJob, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GiveJob, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ServicesId, "Faaliyet Alanı", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("ServicesId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProjectDate, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProjectDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProjectUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProjectUrl, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <button type="submit" class="btn btn-success"> <span class="glyphicon glyphicon-floppy-save"></span>Güncelle</button>
                            <a href="/ProjectsDone/Index" class="btn btn-default"><span class="glyphicon glyphicon-circle-arrow-left"></span>İptal</a>
                        </div>
                    </div>
                </div>


            </div>
        }

    </div>
</div>


