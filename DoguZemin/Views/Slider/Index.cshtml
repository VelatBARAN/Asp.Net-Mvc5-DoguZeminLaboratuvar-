@model IEnumerable<Entities.Slider>

@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="tables">

            <div class="row">
                <div class="col-md-12">
                    <h3>Slider</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a href="/Slider/Create" class="btn btn-warning"><span class="glyphicon glyphicon-plus"></span>Yeni Slider</a>
                    <table id="myTable" class="table table-responsive table-striped table-bordered table-hover panel-body widget-shadow" style="margin-top:10px">
                      
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SlideImage)
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.Raw(item.Text)
                                    </td>
                                    <td>
                                        <img src="~/images/slide/@item.SlideImage" class="img-responsive rounded-circle" width="256" height="256" />
                                    </td>
                                    <td>
                                        <div class="col-md-2 text-right">
                                            <div class="btn-group">
                                                <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                                                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                                                    Seçenekler
                                                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="/Slider/Edit/@item.Id" title="Düzenle">
                                                            <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenle
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="/Slider/Details/@item.Id" title="Detay">
                                                            <span class="glyphicon glyphicon-dashboard">&nbsp;</span>Detay
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="/Slider/Delete/@item.Id" title="Sil" onclick="return confirm('Slider ı silmek istediğinize emin misiniz?')">
                                                            <span class="glyphicon glyphicon-remove">&nbsp;</span>Sil
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                       
                    </table>
                </div>
            </div>

        </div>
        <div class="clearfix"> </div>
    </div>
</div>

@Html.Partial("_PartialDataTables")