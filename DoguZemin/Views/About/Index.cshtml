@using Entities
@model IEnumerable<About>  

@{
    ViewBag.Title = "Sirket Hakkında";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div id="page-wrapper">
        <div class="main-page">
            <div class="tables">

                <div class="row">
                    <div class="col-md-12">
                        <h3>Şirket Hakkında Bilgiler</h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <a href="/About/Create" class="btn btn-info"><span class="glyphicon glyphicon-plus"></span>Yeni Kayıt</a>
                        <table class="table table-responsive table-striped table-bordered table-hover panel-body widget-shadow" style="margin-top:10px">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Text)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AboutImage)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.Raw(item.Text)
                                    </td>
                                    <td>
                                        <img src="~/images/about/@item.AboutImage" class="img-responsive rounded-circle" width="256" height="256" />
                                    </td>
                                    <td>
                                        <div class="col-md-2 text-right">
                                            <div class="btn-group">
                                                <a class="btn dropdown-toggle btn-warning" data-toggle="dropdown" href="#">
                                                    <span class="glyphicon glyphicon-cog">&nbsp;</span>
                                                    Seçenekler
                                                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a href="/About/Edit/@item.Id" title="Düzenle">
                                                            <span class="glyphicon glyphicon-edit">&nbsp;</span>Düzenle
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="/About/Details/@item.Id" title="Detay">
                                                            <span class="glyphicon glyphicon-dashboard">&nbsp;</span>Detay
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="/About/Delete/@item.Id" title="Sil" onclick="return confirm('Kaydı silmek istediğinize emin misiniz?')">
                                                            <span class="glyphicon glyphicon-remove">&nbsp;</span>Sil
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
